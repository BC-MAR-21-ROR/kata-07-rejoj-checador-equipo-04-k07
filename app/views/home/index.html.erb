<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
	<%= render 'partials/navbar' %>
  <main class="px-3">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
      <div class="row align-items-center g-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
          <h1 class="display-4 fw-bold lh-1 mb-3">Access to employees</h1>
          <p class="col-lg-10 fs-4">Enter your private employee number to be able to mark your entry and exit from the store.</p>
        </div>

        <div class="col-10 mx-auto col-lg-5">
          <%= render 'partials/notification' %>
          <%= form_with( model: @employee_check, local: false, class:"p-5 border rounded-3 bg-light" ) do |form| %>
            <div class="form-floating mb-3">
              <%= form.text_field :private_number, class:"form-control" %>
              <%= form.label :private_number %>
            </div>
            <%= form.submit "Check", class:"w-100 btn btn-lg btn-primary" %>
            <hr class="my-4">
            <small class="text-muted">If you do not remember your number it is on the back of your card.</small>
          <% end %>
        </div>
      </div>
    </div>
  </main>
  <%= render 'partials/footer' %>
</div>

